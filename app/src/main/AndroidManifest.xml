<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jay.localsavetest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Jay&apos;s RPG Stat Tracker"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".LoadScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".OpenScreen" />
        <activity
            android:name=".PlayerScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_player_screen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".StartingScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_starting_screen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".NewGameScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_new_game_screen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".LoadGameScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_load_game_screen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Settings"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".BaseActivity" />
    </application>

</manifest>
